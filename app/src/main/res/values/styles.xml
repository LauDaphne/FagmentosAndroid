<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="BotonesIniciales" parent="AppTheme">
        <item name="android:layout_width">@dimen/anchobotonPrin</item>
        <item name="android:layout_height">@dimen/altobotonPrin</item>
        <item name="android:backgroundTint">@color/colorFondoBttn</item>
    </style>
    <style name="BotonesBasicos" parent="AppTheme">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorFondoBttn</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Titulos" parent="AppTheme">
        <item name="android:textSize">@dimen/sizeTitulo</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="FragmentoLista" parent="AppTheme">
        <item name="android:layout_height">@dimen/altoFragList</item>
        <item name="android:layout_width">@dimen/anchoFragList</item>
    </style>

</resources>
